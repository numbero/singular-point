<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.singularpoint.infra.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="org.example.singularpoint.infra.UserDO">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="birthDay" column="birth_day" jdbcType="DATE"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, email, birth_day
    </sql>
    <select id="selectById" resultType="org.example.singularpoint.infra.UserDO">
        select
        <include refid="Base_Column_List"/>
        from user
        where id = #{id}
    </select>

</mapper>